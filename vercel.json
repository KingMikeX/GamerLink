{
    "builds": [
      {
        "src": "Backend/src/requirements.txt",
        "use": "@vercel/python",
        "config": {
          "installCommand": "echo '--- Starting Python Build ---' && ls -lisaR . && echo '--- Attempting pip install ---' && pip install -r Backend/src/requirements.txt",
          "pythonVersion": "3.9"
        }
      },
      {
        "src": "webapp/package.json",
        "use": "@vercel/next",
        "config": {
          "installCommand": "npm install"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "Backend/src/main.py"
      },
      {
        "src": "/(.*)",
        "dest": "webapp/$1"
      }
    ]  
  }