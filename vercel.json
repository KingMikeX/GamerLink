{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/Backend/(.*)"
    }
  ],
  "builds": [
    {
      "src": "webapp/package.json",
      "use": "@vercel/next",
      "config": { "outputDirectory": "webapp" }
    },
    {
      "src": "Backend/main.py",
      "use": "@vercel/python",
      "config": { "outputDirectory": "Backend" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/webapp/$1"
    }
  ],
  "installCommand": "npm install --prefix webapp && pip install -r Backend/requirements.txt"
}